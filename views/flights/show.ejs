<!-- POST /posts/:id -->

<%- include('../../partials/header') %>
<h1>FLIGHT # <%= flight.flightNo%></h1>
<ul>
    <li>ID: <%= flight._id %></li>
    <li>Airline: <%= flight.airline %></li>
    <li>Departs: <%= flight.departs%></li>
</ul>

<ul><li id="menu">
        <div id="">
                <a href="#destination">ADD DESTINATION</a>
                <a href="/flights/<%= flight.id %>/tickets/new">ADD TICKET</a>
                <a href="/flights">ALL FLIGHTS</a>
            </div>
</li></ul>



<h3>Destinations</h3>
<% flight.destinations.forEach((destination, idx) => { %>
<ul>
    <li>Airport: <%=destination.airport%></li>
    <li>Arrival: <%=destination.arrival%></li>
</ul>
<% }) %>

<h3>Tickets</h3>
<%tickets.forEach((ticket, idx) => { %>
<ul>
    <li>Seat #: <%=ticket.seat%></li>
    <li>Price $<%=ticket.price%></li>
</ul>
<%})%>
   
<h2 id="destination">Add Destination</h2>
<form id="destination-form" method="POST"
action="/flights/<%= flight._id %>/destinations">
    <label>Airport:</label>
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DAL">DAL</option>
        <option value="LAX">LAX</option>
        <option value="SEA">SEA</option>
    </select>
    <label >Arrival Date/Time:
        <input 
        type="datetime-local"
        name="arrival" 
        value="2018-06-12T19:30"
        >
    </label>
    <input type="submit" value="Add Destination">
</form>

<%- include('../../partials/footer') %>